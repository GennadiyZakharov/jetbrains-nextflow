<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.intellij-plugins.nextflow.jetbrains-nextflow</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Nextflow Workflow Language Support</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/GennadiyZakharov/jetbrains-nextflow">Gennadii Zakharov</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A minimal support for the Nextflow workflow language.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <!-- Need Groovy plugin for highlighter -->
    <depends>org.intellij.groovy</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Register Nextflow file type and associate with extensions and specific filename -->
        <fileType name="Nextflow" language="Nextflow" implementationClass="com.intellij.plugins.nextflow.lang.NextflowFileType" extensions="nf" fileNames="nextflow.config"/>

        <!-- Register syntax highlighter using Groovy's highlighter -->
        <lang.syntaxHighlighterFactory language="Nextflow" implementationClass="com.intellij.plugins.nextflow.lang.highlight.NextflowSyntaxHighlighterFactory"/>

        <!-- Basic completion contributor for Nextflow keywords -->
        <completion.contributor language="Nextflow" implementationClass="com.intellij.plugins.nextflow.completion.NextflowCompletionContributor"/>
    </extensions>

    <!-- Register actions (File -> New) -->
    <actions>
        <action id="Nextflow.NewFile" class="com.intellij.plugins.nextflow.actions.NewNextflowFileAction" text="Nextflow Workflow" description="Create a new Nextflow (.nf) workflow file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>